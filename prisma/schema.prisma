generator client {
  provider = "prisma-client-js"
  output   = "@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  username String?
  email    String  @unique
  password String

  createdAt DateTime? @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  basket Post[] 

  @@map("user")
}

model Post {
  id               String    @id @default(uuid())
  title            String
  prices           Int[]
  colors           String[]
  memory           Int[]
  logos            String[]
  brand            String
  screenSize       String    @map("screen_size")
  CPU              String    @map("cpu")
  MainCamera       String    @map("main_camera")
  FrontCamera      String    @map("front_camera")
  Battery          Int       @map("battery")
  description      String
  screenResolution String    @map("screen_resolution")
  screenType       String    @map("screen_type")
  pixelDebcity     String    @map("pixel_dencity")

  User             User?     @relation(fields: [userId], references: [id])
  userId           String?

  createdAt        DateTime? @default(now()) @map("created_at")
  updatedAt        DateTime? @updatedAt @map("updated_at")
}
